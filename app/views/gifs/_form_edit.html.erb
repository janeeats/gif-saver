<%= form_for @gif, :url => gif_path, :html => { :multipart => true }  do |f| %>

  <% if @gif.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@gif.errors.count, "error") %> prohibited this gif from being saved:</h2>

      <ul>
      <% @gif.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    Store this gif under 
    <label>
      <%= f.select :folder_id, current_user.folders.collect {|folder| [folder.name, folder.id]} %>
      <span>folder</span>
    </label>
    and update the caption to display 
    <label>
      <%= f.text_field :caption %>
      <span>caption</span>
    </label>
  </div>

  <div class="actions">
    <%= f.submit 'boom' %>
  </div>
<% end %>
