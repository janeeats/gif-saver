<h1 class="editable"><%= @gif.caption %></h1>

<% if @gif.is_maintained_by?(current_user) %>
  <p class="editablelink"><%= link_to raw('<i class="icon-edit"></i> Edit Caption'), edit_gif_path(@gif) %></p>
<% end %>

<p>
  <img src="<%= @gif.file.url %>">
</p>

<p class="usp">
  <%= link_to "Post To Facebook", facebook_post_path(@gif), :class => 'primary' %>
</p>

<p class="usp">
  <%= link_to "Post To Twitter", twitter_post_path(@gif), :class => 'primary' %>
</p>

<p class="breadcrumb">

  <a href="<%= user_folders_path(@user) %>">
    <i class="icon-folder-close"></i> <%= @user.username %> </a> 

  / 
  
  <a href="<%= user_folder_path(@user, @gif.folder) %>">
    <i class="icon-folder-open"></i> <%= @gif.folder.name %></a> 

</p>
